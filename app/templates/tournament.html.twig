{% extends 'base.html.twig' %}
{%  block content %}
    <div class="row">
        <div class="p-3 pb-md-4 mx-auto text-center">
            <h1 class="display-4 fw-normal text-body-emphasis">Турнир <span class="bold">{{ tournament.title }}</span></h1>
            <div class="row row-cols-1 text-center">
                    <div class="col">
                        <div class="card mb-4 rounded-3 shadow-sm">
                            <div class="card-header py-3">
                                <h4 class="my-0 fw-normal">Встречи турнира</h4>
                                <ol class="mt-3 mb-4">
                                    {% for meeting in tournament.meetings %}
                                        <li> {{ meeting.getFirstTeam() ? meeting.getFirstTeam().getName() : 'N/A' }}
                                            - {{ meeting.getSecondTeam() ? meeting.getSecondTeam().getName() : 'N/A' }}</li>
                                        <p>{{ meeting.getMeetingDate() ?? 'N/A' }}</p>
                                    {% endfor %}
                                </ol>
                            </div>
                            <div class="card-body">
                                <button type="button" class="btn btn-primary"
                                        onclick="document.location.href='http://tournaments.loc/tournament/{{ tournament.title }}'">
                                    Открыть
                                </button>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
{% endblock %}